<div class="container">
  <h2>Movie Details</h2>
  <div class="movie-container">
    {{#with movieDetails}}
    <h3>{{title}}</h3>
    <p>{{genre}}</p>
    <p>{{plot}}</p>
  
  <div class="cast">
    {{#each cast}}   
      <p>{{name}}</p>
      <p>{{occupation}}</p>
      <p>{{catchPhrase}}</p>
    {{/each}}
  </div>
    <div class="row">
      <div class="col-2">
        <a href="/movies/{{id}}/edit" class="btn btn-dark" > Edit   </a>
      </div>
      
      <div class="col-3">
      <form action="/movies/{{id}}/delete" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      </div>
      <div class="col-4">
       <a href="/movies" class="btn btn-dark">Go back</a>
      </div>
    </div>
    {{/with}}

</div>
</div>